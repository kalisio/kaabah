groups:
- name: Name
  rules:

  - alert: service_down
    expr: up == 0
    for: 5m
    labels:
      severity: page
    annotations:
      summary: "Instance {{ $labels.instance }} down"
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 5 minutes."

  - alert: high_load
    expr: node_load1 > 1.25
    for: 5m
    labels:
      severity: page
    annotations:
      summary: "Instance {{ $labels.instance }} under high load"
      description: "{{ $labels.instance }} of job {{ $labels.job }} is under high load for more than 5 minutes."

  - alert: Disk_fill_in_4_hours
    expr: predict_linear(node_filesystem_free{job="node"}[1h], 4 * 3600) < 0
    for: 5m
    labels:
      severity: page
    annotations:
      summary: "Instance {{ $labels.instance }} is getting low on free disk space"
      description: "{{ $labels.instance }} of job {{ $labels.job }} is getting low on free disk space."